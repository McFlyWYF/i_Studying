<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/side_nav_bar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/head" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="等待"
            android:textColor="#000000"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="个性签名:坚持，你会收获一份礼物"
            android:textColor="#BFBFBF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/friends_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="我的好友"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/friend"
            android:drawableRight="@drawable/back"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/context_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="我的收藏"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_below="@+id/friends_text"
            android:drawableLeft="@drawable/context"
            android:drawableRight="@drawable/back"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/log_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="我的学习记录"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_below="@+id/context_text"
            android:drawableLeft="@drawable/log"
            android:drawableRight="@drawable/back"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="设置"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_below="@+id/log_text"
            android:drawableLeft="@drawable/setting"
            android:drawableRight="@drawable/back"
            android:padding="10dp"/>
    </RelativeLayout>

</LinearLayout>
